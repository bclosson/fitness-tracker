<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fitness Tracker</title>
</head>
<body>
    <% include('../partials/header') %>

    <main>
        <h2>Add New HIIT</h2>
        <form action="/hiits" method="POST">
        
            <select name="workouts">
                <% workouts.forEach((workout) => { %>
                <option value="<%= workout.id %>"><%= workout.name %></option>

            <% }); %> 
            </select> 
            <!--   added from edit...  -->
            <div>
                <label for="circuit">Route</label>
                <input type="text" name="circuit"value="<%= hiit.circuit %>">
            </div>
            <div>
                <label for="cycles">Distance</label>
                <input type="text" name="cycles"value="<%= hiit.cycles %>">
            </div>
            <div>
                <label for="time">Time</label>
                <input type="text" name="time"value="<%= hiit.time %>">
            </div>
            <!--  above from edit  -->
            <select name="hiit" id="hiit">
                <% hiit.forEach((hiit) => { %> */
                <option value="<%= hiit.id %>"><%= hiit.name %></option>
                <%  }); %> 
            </select>
        </form>

    </main>
    
</body>
</html>